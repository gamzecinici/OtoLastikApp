<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.MusterilerController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom right, #0f172a, #1e293b);">

    <children>
        <VBox spacing="15" alignment="TOP_CENTER"
              AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20"
              AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20"
              style="-fx-background-color: rgba(255,255,255,0.04);
                     -fx-background-radius: 16;
                     -fx-padding: 24;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 15, 0.2, 0, 4);">

            <!-- 🏷 Başlık -->
            <Label text="👥 MÜŞTERİ LİSTESİ"
                   style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #f1f5f9;"/>

            <!-- 🧾 Tablo -->
            <TableView fx:id="tableMusteriler"
                       prefHeight="400" prefWidth="820"
                       style="-fx-background-color: #2b3b4e;
                              -fx-control-inner-background: #2b3b4e;
                              -fx-border-color: #475569;
                              -fx-border-radius: 8;
                              -fx-background-radius: 8;
                              -fx-table-cell-border-color: #475569;
                              -fx-table-header-border-color: #475569;
                              -fx-selection-bar: #3b82f6;
                              -fx-selection-bar-non-focused: #334155;">

                <columns>
                    <!-- ID KALDIRILDI -->
                    <TableColumn fx:id="colAdi" text="Adı" prefWidth="110"/>
                    <TableColumn fx:id="colSoyadi" text="Soyadı" prefWidth="110"/>
                    <TableColumn fx:id="colTelefon" text="Telefon" prefWidth="150"/>
                    <TableColumn fx:id="colEmail" text="E-posta" prefWidth="180"/>
                    <TableColumn fx:id="colAdres" text="Adres" prefWidth="180"/>
                    <TableColumn fx:id="colKayitTarihi" text="Kayıt Tarihi" prefWidth="150"/>
                    <TableColumn fx:id="colBorc" text="Borç ₺" prefWidth="90"/>
                </columns>

                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>

                <style>
                    .column-header-background {
                    -fx-background-color: #1f2c3a;
                    }
                    .column-header {
                    -fx-text-fill: #f1f5f9;
                    -fx-font-weight: bold;
                    -fx-font-size: 14px;
                    -fx-alignment: CENTER;
                    }
                </style>
            </TableView>

            <!-- 🔘 Alt Butonlar -->
            <HBox alignment="CENTER_RIGHT" spacing="12">

                <Button text="+ Müşteri Ekle"
                        onAction="#handleMusteriEkle"
                        style="-fx-background-color: linear-gradient(to right, #16a34a, #22c55e);
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-background-radius: 10;
                               -fx-pref-height: 36;
                               -fx-pref-width: 140;
                               -fx-font-size: 13px;
                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 6, 0, 0, 2);"/>

                <Button text="✏ Müşteri Güncelle"
                        onAction="#handleMusteriGuncelle"
                        style="-fx-background-color: linear-gradient(to right, #2563eb, #3b82f6);
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-background-radius: 10;
                               -fx-pref-height: 36;
                               -fx-pref-width: 150;
                               -fx-font-size: 13px;
                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 6, 0, 0, 2);"/>

                <Button text="🗑 Müşteri Kaldır"
                        onAction="#handleMusteriSil"
                        style="-fx-background-color: linear-gradient(to right, #dc2626, #ef4444);
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-background-radius: 10;
                               -fx-pref-height: 36;
                               -fx-pref-width: 140;
                               -fx-font-size: 13px;
                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 6, 0, 0, 2);"/>

                <Button text="↩ Geri Dön"
                        onAction="#handleGeriDon"
                        style="-fx-background-color: linear-gradient(to right, #ca8a04, #eab308);
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-background-radius: 10;
                               -fx-pref-height: 36;
                               -fx-pref-width: 130;
                               -fx-font-size: 13px;
                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 6, 0, 0, 2);"/>
            </HBox>

        </VBox>
    </children>
</AnchorPane>
