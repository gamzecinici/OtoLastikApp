<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.SatislarController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom right, #0f172a, #1e293b);">

    <children>
        <VBox spacing="18" alignment="TOP_CENTER"
              AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20"
              AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20"
              style="-fx-background-color: rgba(255,255,255,0.05);
                     -fx-background-radius: 16;
                     -fx-padding: 24;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 15, 0.2, 0, 4);">

            <!-- Başlık -->
            <Label text="💰 GERÇEKLEŞEN SATIŞLAR"
                   style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #f1f5f9;"/>

            <!-- Satış Tablosu -->
            <TableView fx:id="tableSatislar"
                       prefHeight="420" prefWidth="850"
                       style="-fx-background-color: #2b3b4e;
                  -fx-control-inner-background: #2b3b4e;
                  -fx-border-color: #475569;
                  -fx-border-radius: 8;
                  -fx-background-radius: 8;
                  -fx-table-cell-border-color: #475569;
                  -fx-table-header-border-color: #475569;
                  -fx-selection-bar: #3b82f6;
                  -fx-selection-bar-non-focused: #334155;">

                <columns>
                    <TableColumn fx:id="colMarka" text="Marka" prefWidth="100"/>
                    <TableColumn fx:id="colModel" text="Model" prefWidth="100"/>
                    <TableColumn fx:id="colEbat" text="Ebat" prefWidth="100"/>
                    <TableColumn fx:id="colHiz" text="Hız Endeksi" prefWidth="90"/>
                    <TableColumn fx:id="colYuk" text="Yük Endeksi" prefWidth="90"/>
                    <TableColumn fx:id="colMusteri" text="Müşteri" prefWidth="140"/>
                    <TableColumn fx:id="colTelefon" text="Telefon" prefWidth="100"/>
                    <TableColumn fx:id="colAdet" text="Adet" prefWidth="60"/>
                    <TableColumn fx:id="colAlinacak" text="Alınacak ₺" prefWidth="90"/>
                    <TableColumn fx:id="colAlinan" text="Alınan ₺" prefWidth="90"/>
                    <TableColumn fx:id="colKalan" text="Kalan ₺" prefWidth="80"/>
                    <TableColumn fx:id="colTarih" text="Tarih" prefWidth="130"/>
                    <TableColumn fx:id="colOdendi" text="Ödendi" prefWidth="70"/>
                </columns>

                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>


            <!-- Alt Butonlar -->
            <HBox spacing="100" alignment="CENTER"
                  AnchorPane.bottomAnchor="25">

                <!-- Sol Grup -->
                <HBox spacing="14" alignment="CENTER_LEFT">
                    <children>
                        <!-- Satışı Güncelle -->
                        <Button text="✏️ Satışı Güncelle"
                                onAction="#handleSatisGuncelle"
                                style="-fx-background-color: linear-gradient(to right, #22c55e, #16a34a);
                                       -fx-text-fill: white;
                                       -fx-font-size: 14px;
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 10;
                                       -fx-pref-height: 36;
                                       -fx-pref-width: 150;
                                       -fx-cursor: hand;
                                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.35), 6, 0, 0, 2);" />

                        <!-- Satışı İptal Et -->
                        <Button text="🗑️ Satışı İptal Et"
                                onAction="#handleSatisIptal"
                                style="-fx-background-color: linear-gradient(to right, #fb923c, #f97316);
                                       -fx-text-fill: white;
                                       -fx-font-size: 14px;
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 10;
                                       -fx-pref-height: 36;
                                       -fx-pref-width: 150;
                                       -fx-cursor: hand;
                                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.35), 6, 0, 0, 2);" />
                    </children>
                </HBox>

                <!-- Sağ Grup -->
                <HBox spacing="14" alignment="CENTER_RIGHT">
                    <children>
                        <!-- Yenile -->
                        <Button text="🔄 Yenile"
                                onAction="#handleYenile"
                                style="-fx-background-color: linear-gradient(to right, #8b5cf6, #7c3aed);
                                       -fx-text-fill: white;
                                       -fx-font-size: 14px;
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 10;
                                       -fx-pref-height: 36;
                                       -fx-pref-width: 130;
                                       -fx-cursor: hand;
                                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.35), 6, 0, 0, 2);" />

                        <!-- Geri Dön -->
                        <Button text="↩ Geri Dön"
                                onAction="#handleGeri"
                                style="-fx-background-color: linear-gradient(to right, #dc2626, #ef4444);
                                       -fx-text-fill: white;
                                       -fx-font-size: 14px;
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 10;
                                       -fx-pref-height: 36;
                                       -fx-pref-width: 130;
                                       -fx-cursor: hand;
                                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.35), 6, 0, 0, 2);" />
                    </children>
                </HBox>

            </HBox>

        </VBox>
    </children>
</AnchorPane>
