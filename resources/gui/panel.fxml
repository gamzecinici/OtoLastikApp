<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.PanelController"
            prefWidth="800" prefHeight="500"
            style="-fx-background-color: linear-gradient(to bottom right, #1e1e1e, #2d2d2d);">

    <children>

        <!-- Üst kısım: Logo + Tarih/Saat -->
        <HBox spacing="20" alignment="CENTER_LEFT"
              AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20">
            <ImageView fx:id="logoView" fitHeight="80" fitWidth="80" />
            <VBox spacing="5">
                <Label fx:id="dateLabel"
                       style="-fx-font-size: 18px; -fx-text-fill: #e0e0e0;" />
                <Label fx:id="timeLabel"
                       style="-fx-font-size: 18px; -fx-text-fill: #e0e0e0;" />
            </VBox>
        </HBox>

        <!-- Orta kısım: Buton kartı (merkezde) -->
        <StackPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                   AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <children>
                <VBox alignment="CENTER" spacing="20"
                      prefWidth="240" prefHeight="220"
                      style="-fx-background-color: rgba(255,255,255,0.06);
                             -fx-background-radius: 14;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.35), 18, 0.2, 0, 4);">
                    <padding>
                        <Insets top="24" right="24" bottom="24" left="24"/>
                    </padding>

                    <Button fx:id="btnLastikler" text="Lastikler"
                            onAction="#handleLastikler"
                            style="-fx-background-color: #4caf50;
                                   -fx-text-fill: white; -fx-font-weight: bold;
                                   -fx-background-radius: 8; -fx-pref-width: 180;
                                   -fx-cursor: hand;"/>

                    <Button fx:id="btnLastikEkle" text="Lastik Ekle"
                            onAction="#handleLastikEkle"
                            style="-fx-background-color: #2196f3;
                                   -fx-text-fill: white; -fx-font-weight: bold;
                                   -fx-background-radius: 8; -fx-pref-width: 180;
                                   -fx-cursor: hand;"/>

                    <Button fx:id="btnSatislar" text="Satışlar"
                            onAction="#handleSatislar"
                            style="-fx-background-color: #ff9800;
                                   -fx-text-fill: white; -fx-font-weight: bold;
                                   -fx-background-radius: 8; -fx-pref-width: 180;
                                   -fx-cursor: hand;"/>
                </VBox>
            </children>
        </StackPane>

        <!-- Alt bilgi -->
        <Label text="Yılmaz &amp; Ünal Oto Lastik"
               AnchorPane.bottomAnchor="12" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
               style="-fx-text-fill: #888888; -fx-font-size: 12px;"
               alignment="CENTER"/>
    </children>
</AnchorPane>
