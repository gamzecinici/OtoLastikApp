<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="gui.PanelController"
            prefWidth="800" prefHeight="500"
            style="-fx-background-color: linear-gradient(to bottom right, #1e1e1e, #2d2d2d);">

    <children>

        <!-- Üst kısım: Logo + Tarih/Saat -->
        <HBox spacing="20" alignment="CENTER_LEFT"
              layoutX="30" layoutY="20">
            <ImageView fx:id="logoView" fitHeight="80" fitWidth="80"/>
            <VBox spacing="5">
                <Label fx:id="dateLabel"
                       style="-fx-font-size: 18px; -fx-text-fill: #e0e0e0;"/>
                <Label fx:id="timeLabel"
                       style="-fx-font-size: 18px; -fx-text-fill: #e0e0e0;"/>
            </VBox>
        </HBox>

        <!-- Orta kısım: Butonlar -->
        <VBox alignment="CENTER" spacing="20"
              layoutX="300" layoutY="180"
              prefWidth="200" prefHeight="200"
              style="-fx-background-color: rgba(255,255,255,0.05);
                     -fx-background-radius: 12;
                     -fx-padding: 20;">
            <Button text="Lastikler"
                    onAction="#handleLastikler"
                    style="-fx-background-color: #4caf50;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-background-radius: 6;
                           -fx-pref-width: 150;
                           -fx-cursor: hand;"/>
            <Button text="Lastik Ekle"
                    onAction="#handleLastikEkle"
                    style="-fx-background-color: #2196f3;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-background-radius: 6;
                           -fx-pref-width: 150;
                           -fx-cursor: hand;"/>
            <Button text="Satışlar"
                    onAction="#handleSatislar"
                    style="-fx-background-color: #ff9800;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-background-radius: 6;
                           -fx-pref-width: 150;
                           -fx-cursor: hand;"/>
        </VBox>

        <!-- Alt bilgi -->
        <Label text="Yılmaz &amp; Ünal Oto Lastik"
               layoutX="320" layoutY="460"
               style="-fx-text-fill: #888888; -fx-font-size: 12px;"/>

    </children>
</AnchorPane>